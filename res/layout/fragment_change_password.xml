<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <EditText
        android:id="@+id/edit_text_old_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edit_text_confirm_new_pass"
        android:layout_alignRight="@+id/edit_text_confirm_new_pass"
        android:layout_below="@+id/text_view_hint_pass_change"
        android:layout_marginTop="82dp"
        android:ems="10" />

    <Button
        android:id="@+id/button_change_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_text_confirm_new_pass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:text="Change" />

    <TextView
        android:id="@+id/text_view_hint_pass_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="96dp"
        android:gravity="center"
        android:text="Password Reset" />

    <EditText
        android:id="@+id/edit_text_new_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edit_text_old_password"
        android:layout_alignLeft="@+id/edit_text_old_password"
        android:layout_alignRight="@+id/edit_text_old_password"
        android:layout_marginBottom="37dp"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/edit_text_confirm_new_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_text_old_password"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textPassword" />

</RelativeLayout>