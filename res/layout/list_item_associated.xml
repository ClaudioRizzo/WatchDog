<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_layout_localize_list"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp" >

    <TextView
        android:id="@+id/text_view_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edit_text_associated_password"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/edit_text_associated_password"
        android:layout_marginTop="22dp"
        android:gravity="center"
        android:textSize="20dp"
        android:text="TextView" />

    <EditText
        android:id="@+id/edit_text_associated_password"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_number"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="Password here"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/button_send"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_text_associated_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="22dp"
        android:text="Localize"
        android:textSize="18dp" />

</RelativeLayout><!--
