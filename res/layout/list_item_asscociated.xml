<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_layout_localize_list"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp" >

    <TextView
        android:id="@+id/text_view_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edit_text_associated_password"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/edit_text_associated_password"
        android:layout_toLeftOf="@+id/edit_text_associated_password"
        android:gravity="center"
        android:text="+3934663424"
        android:textColor="@color/hacker_green" />

    <EditText
        android:id="@+id/edit_text_associated_password"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:hint="Password here"
        android:textColor="@color/hacker_green" />

    <Button
        android:id="@+id/button_send"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/edit_text_associated_password"
        android:layout_below="@+id/edit_text_associated_password"
        android:text="Localize" />

</RelativeLayout><!--
