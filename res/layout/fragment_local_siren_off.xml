<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <EditText
        android:id="@+id/edit_text_password_siren_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:ems="10"
        android:hint="password here"
        android:inputType="textPassword" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/text_view_siren_off_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edit_text_password_siren_off"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="71dp"
        android:gravity="center"
        android:textSize="20dp"
        android:text="@string/local_siren_off" />

    <Button
        android:id="@+id/button_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_text_password_siren_off"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:text="Stop"
        android:textSize="18dp" />

</RelativeLayout>